[Unit]
Description=pattoo-api-agentd daemon
Wants=network.target
After=network.target

[Service]
Environment="PATTOO_CONFIGDIR=x"
Environment="BIN_DIR=x"
ExecStart=/bin/python3 $BIN_DIR/pattoo-api-agentd.py --start
ExecStop=/bin/python3 $BIN_DIR/pattoo-api-agentd.py --stop
ExecReload=/bin/python3 $BIN_DIR/pattoo-api-agentd.py --restart

[Install]
WantedBy=multi-user.target
